<form class="form-horizontal">
    <fieldset>
        <legend class="col-md-7 col-md-offset-3">Write a post</legend>

        <div class="form-group">
            <label class="col-md-4 control-label" for="title-input">Title</label>
            <div class="col-md-6">
                {{bs-input value=post.title}}
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label" for="text-input">Text</label>
            <div class="col-md-6">
                {{bs-textarea value=post.text}}
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-6">
                {{bs-button type="primary" defaultText="Save" loadingText="Saving..." size="lg" disabled=post.isInvalid
                action='save' }}
            </div>
        </div>
    </fieldset>
</form>